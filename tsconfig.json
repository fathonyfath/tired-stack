{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["./src/components/*"]
    },
    "types": ["bun-types"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
